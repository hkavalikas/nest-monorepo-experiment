{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./tests/unit",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@client/(.*)$": "<rootDir>/../../client/src/$1",
    "^@common/(.*)$": "<rootDir>/../../common/src/$1"
  }
}
