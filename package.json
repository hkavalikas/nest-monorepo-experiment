{
  "name": "nest-monorepo-experiment",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@8.6.5",
  "scripts": {
    "build": "turbo run build:app",
    "build:app": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js --sourcemap --sources-content=true --external:@nestjs/microservices --external:@nestjs/websockets --external:@nestjs/microservices/microservices-module --external:cache-manager --external:class-transformer --external:class-validator --external:@nestjs/microservices/microservices-module",
    "format": "turbo run format:run",
    "format:run": "prettier --write \"src/**/*.ts\"",
    "lint": "turbo run lint:run",
    "lint:run": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "start": "node --enable-source-maps dist/main.js",
    "dev": "turbo run dev:run",
    "dev:run": "tsx watch src/main.ts",
    "test": "turbo run test:unit:run",
    "test:unit": "turbo run test:unit:run",
    "test:unit:run": "jest",
    "test:e2e": "turbo run test:e2e:run",
    "test:e2e:run": "jest --config ./src/tests/jest-e2e.json",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "drizzle-orm": "^0.30.4",
    "nestjs-zod": "^4.3.1",
    "pg": "^8.11.3",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.2",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.21.2",
    "esbuild": "^0.20.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "turbo": "^2.5.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": "src/tests/unit/.*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
